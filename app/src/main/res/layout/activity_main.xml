<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

   <com.doaa.doaaidris_tutorial6.DrawingCanvas
       android:id="@+id/myCanvas"
       android:layout_width="492dp"
       android:layout_height="572dp"
       android:background="#FFFFFF"
       app:layout_constraintBottom_toTopOf="@+id/toolbar"
       app:layout_constraintTop_toBottomOf="@+id/seekBar"
       app:layout_constraintVertical_bias="1.0"
       tools:layout_editor_absoluteX="-23dp" />

   <SeekBar
       android:id="@+id/seekBar"
       android:layout_width="375dp"
       android:layout_height="50dp"
       android:max="70"
       android:progress="0"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.555"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.048" />

   <androidx.appcompat.widget.Toolbar
       android:id="@+id/toolbar"
       android:layout_width="461dp"
       android:layout_height="91dp"
       android:background="#D82A2B2B"
       android:minHeight="?attr/actionBarSize"
       android:theme="?attr/actionBarTheme"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="1.0"
       app:layout_constraintStart_toStartOf="parent" />

   <Button
       android:id="@+id/clearBtn"
       android:layout_width="76dp"
       android:layout_height="36dp"
       android:layout_marginStart="10dp"
       android:layout_marginLeft="10dp"
       android:layout_marginTop="8dp"
       android:layout_marginEnd="10dp"
       android:layout_marginRight="10dp"
       android:background="#D8D8D8"
       android:text="Clear"
       app:layout_constraintEnd_toStartOf="@+id/undoBtn"
       app:layout_constraintHorizontal_bias="0.0"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="@+id/toolbar" />

   <Button
       android:id="@+id/undoBtn"
       android:layout_width="67dp"
       android:layout_height="30dp"
       android:layout_marginTop="12dp"
       android:layout_marginEnd="8dp"
       android:layout_marginRight="8dp"
       android:background="#D8D8D8"
       android:text="Undo"
       app:layout_constraintEnd_toStartOf="@+id/eraserBtn"
       app:layout_constraintTop_toTopOf="@+id/toolbar" />

   <Button
       android:id="@+id/eraserBtn"
       android:layout_width="72dp"
       android:layout_height="30dp"
       android:layout_marginTop="12dp"
       android:layout_marginEnd="4dp"
       android:layout_marginRight="4dp"
       android:background="#D8D8D8"
       android:text="Eraser"
       app:layout_constraintEnd_toStartOf="@+id/drawBtn"
       app:layout_constraintTop_toTopOf="@+id/toolbar" />

   <Button
       android:id="@+id/lineBtn"
       android:layout_width="75dp"
       android:layout_height="35dp"
       android:background="#D8D8D8"
       android:text="Line"
       app:layout_constraintBottom_toBottomOf="@+id/toolbar"
       app:layout_constraintEnd_toStartOf="@+id/circleBtn"
       app:layout_constraintHorizontal_bias="0.4"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/clearBtn"
       app:layout_constraintVertical_bias="0.6" />

   <Button
       android:id="@+id/circleBtn"
       android:layout_width="81dp"
       android:layout_height="33dp"
       android:layout_marginEnd="8dp"
       android:layout_marginRight="8dp"
       android:background="#D8D8D8"
       android:text="Circle"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toStartOf="@+id/rectBtn"
       app:layout_constraintTop_toBottomOf="@+id/undoBtn"
       app:layout_constraintVertical_bias="0.428" />

   <Button
       android:id="@+id/rectBtn"
       android:layout_width="72dp"
       android:layout_height="40dp"
       android:layout_marginEnd="76dp"
       android:layout_marginRight="76dp"
       android:text="Rect"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toStartOf="@+id/colorPicker"
       app:layout_constraintTop_toBottomOf="@+id/eraserBtn"
       app:layout_constraintVertical_bias="0.857" />

   <Button
       android:id="@+id/drawBtn"
       android:layout_width="74dp"
       android:layout_height="40dp"
       android:layout_marginEnd="4dp"
       android:layout_marginRight="4dp"
       android:text="draw"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toStartOf="@+id/colorPicker"
       app:layout_constraintTop_toTopOf="@+id/toolbar"
       app:layout_constraintVertical_bias="0.117" />

   <View
       android:id="@+id/colorPicker"
       android:layout_width="69dp"
       android:layout_height="64dp"
       android:layout_marginEnd="13dp"
       android:layout_marginRight="13dp"
       android:layout_marginBottom="13dp"
       android:background="#FFFFFF"
       android:outlineAmbientShadowColor="#333131"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/myCanvas"
       app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>