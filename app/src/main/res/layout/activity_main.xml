<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

   <com.doaa.doaaidris_tutorial6.DrawingCanvas
       android:id="@+id/myCanvas"
       android:layout_width="492dp"
       android:layout_height="572dp"
       android:background="#FFFFFF"
       app:layout_constraintBottom_toTopOf="@+id/toolbar"
       app:layout_constraintTop_toBottomOf="@+id/seekBar"
       app:layout_constraintVertical_bias="1.0"
       tools:layout_editor_absoluteX="-23dp" />

   <SeekBar
       android:id="@+id/seekBar"
       android:layout_width="375dp"
       android:layout_height="50dp"
       android:max="70"
       android:progress="0"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.555"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.048" />

   <androidx.appcompat.widget.Toolbar
       android:id="@+id/toolbar"
       android:layout_width="461dp"
       android:layout_height="91dp"
       android:background="#D82A2B2B"
       android:minHeight="?attr/actionBarSize"
       android:theme="?attr/actionBarTheme"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent" />

   <Button
       android:id="@+id/clearBtn"
       android:layout_width="79dp"
       android:layout_height="46dp"
       android:layout_marginStart="30dp"
       android:layout_marginLeft="30dp"
       android:layout_marginEnd="4dp"
       android:layout_marginRight="4dp"
       android:layout_marginBottom="12dp"
       android:text="Clear"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toStartOf="@+id/undoBtn"
       app:layout_constraintHorizontal_bias="1.0"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="@+id/toolbar"
       app:layout_constraintVertical_bias="0.727" />

   <Button
       android:id="@+id/undoBtn"
       android:layout_width="77dp"
       android:layout_height="45dp"
       android:layout_marginEnd="4dp"
       android:layout_marginRight="4dp"
       android:layout_marginBottom="12dp"
       android:text="Undo"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toStartOf="@+id/eraserBtn"
       app:layout_constraintTop_toTopOf="@+id/toolbar"
       app:layout_constraintVertical_bias="0.705" />

   <Button
       android:id="@+id/eraserBtn"
       android:layout_width="80dp"
       android:layout_height="46dp"
       android:layout_marginEnd="4dp"
       android:layout_marginRight="4dp"
       android:text="Eraser"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toStartOf="@+id/lineBtn"
       app:layout_constraintTop_toTopOf="@+id/toolbar"
       app:layout_constraintVertical_bias="0.511" />

   <Button
       android:id="@+id/lineBtn"
       android:layout_width="76dp"
       android:layout_height="45dp"
       android:layout_marginEnd="20dp"
       android:layout_marginRight="20dp"
       android:text="Line"
       app:layout_constraintBottom_toBottomOf="@+id/toolbar"
       app:layout_constraintEnd_toStartOf="@+id/colorPicker"
       app:layout_constraintTop_toBottomOf="@+id/myCanvas"
       app:layout_constraintVertical_bias="0.531" />

   <View
       android:id="@+id/colorPicker"
       android:layout_width="69dp"
       android:layout_height="64dp"
       android:layout_marginEnd="13dp"
       android:layout_marginRight="13dp"
       android:layout_marginBottom="13dp"
       android:background="#FFFFFF"
       android:outlineAmbientShadowColor="#333131"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/myCanvas"
       app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>